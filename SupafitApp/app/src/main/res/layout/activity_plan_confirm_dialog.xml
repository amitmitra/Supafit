<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.supafit.ui.planslist.PlanConfirmDialog"
    android:gravity="center"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp">

            <com.android.supafit.ui.RegularFontTextViewBold
                android:padding="3dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:id="@+id/plan_name_selected"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Easy-Weight-Loss"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                />

            <com.android.supafit.ui.LightFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/plan_description_selected"
                android:textSize="15sp"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                android:paddingTop="20dp"
                android:layout_marginBottom="20dp"/>

            <com.android.supafit.ui.LightFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/plan_title_selected"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:text="Lorem Ipsum-Weight Loss"
                android:paddingTop="20dp"
                android:layout_marginBottom="20dp"/>


            <com.android.supafit.ui.RegularFontTextViewBold
                android:padding="3dp"
                android:layout_width="match_parent"
                android:id="@+id/plan_cost_selected"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Rs 3000/-"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                />
            <android.support.v7.widget.AppCompatButton
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/confirm"
                android:layout_gravity="end"
                android:background="@color/colorPrimary"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="Confirm"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>
